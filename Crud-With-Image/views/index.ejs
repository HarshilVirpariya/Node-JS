<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Store Project</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 90%;
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .form-container {
            margin-bottom: 20px;
        }

        .form-container h1 {
            margin-top: 0;
            font-size: 24px;
            color: #444;
            text-align: center;
        }

        form {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
        }

        input[type="text"],
        input[type="number"],
        input[type="file"] {
            flex: 1;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 16px;
            margin-bottom: 15px;
        }

        input[type="file"] {
            padding: 5px;
            border: 1px solid #ddd;
            cursor: pointer;
        }

        input[type="submit"] {
            background-color: #2898e7;
            color: white;
            border: none;
            height: 40px;
            width: 30%;
            letter-spacing: 2px;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            transition: background-color 0.3s ease;
            flex: 1;
            text-align: center;
        }

        input[type="submit"]:hover {
            background-color: #1a73e8;
        }

        .table-container {
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 0;
        }

        th, td {
            padding: 12px;
            text-align: center;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f8f8f8;
            color: #555;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            text-align: center;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        td.actions {
            text-align: center;
        }

        #edit {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 8px 12px;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        #delete {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 8px 12px;
            margin-left: 5%;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            opacity: 0.9;
        }

        button#delete:hover {
            opacity: 0.8;
        }

        a {
            text-decoration: none;
        }

        /* Responsive design */
        @media (max-width: 768px) {
            form {
                flex-direction: column;
            }

            input[type="text"],
            input[type="number"],
            input[type="file"],
            input[type="submit"] {
                width: 100%;
                font-size: 14px;
            }

            table {
                font-size: 14px;
            }

            table th, table td {
                padding: 10px;
            }

            table img {
                max-width: 80px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h1>Add New Book</h1>
            <form action="/insert" method="post" enctype="multipart/form-data">
                <input type="text" placeholder="Book Title:" name="Title" required>
                <input type="text" placeholder="Book Author:" name="Author" required>
                <input type="number" placeholder="Book Published Year:" name="PublishedYear" required>
                <input type="number" placeholder="Book Pages:" name="Pages" required>
                <input type="number" placeholder="Book Price:" name="Price" required>
                <input type="number" placeholder="Book Published Copies:" name="PublishedCopies" required>
                <input type="file" name="image" required>
                <input type="submit" value="Submit">
            </form>
        </div>
        <div class="table-container">
            <h1>Book List</h1>
            <table>
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Published Year</th>
                        <th>Pages</th>
                        <th>Price</th>
                        <th>Published Copies</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.map((e) => { %>
                        <tr>
                            <td><img src="<%= e.image %>" alt="Book Image" height="100px" width="100px"></td>
                            <td><%= e.Title %></td>
                            <td><%= e.Author %></td>
                            <td><%= e.PublishedYear %></td>
                            <td><%= e.Pages %></td>
                            <td><%= e.Price %></td>
                            <td><%= e.PublishedCopies %></td>
                            <td class="actions">
                                <a href="/editData?id=<%= e._id %>"><button id="edit">Edit</button></a>
                                <a href="/deleteData?id=<%= e._id %>"><button id="delete">Delete</button></a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>